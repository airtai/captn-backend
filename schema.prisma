datasource db {
  // could be postgresql or mysql
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator db {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

model GAuth {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user_id    Int      @unique
  creds      Json
  info       Json
}

model Task {
  user_id Int
  chat_id Int
  team_id Int @id
  team_name String
  team_status String
  msg String
  is_question Boolean
  call_counter Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
